<% if logged_in? %>
  <script type='text/javascript'>
    window.currentUser = {
            "id": <%= current_user.id %>,
            "username": "<%= current_user.username %>",
            "email": "<%= current_user.email %>",
    }
    if (current_user.photo){
      window.currentUser = {
        "photoUrl": "<%= current_user.photo %>",
      }
    }
  </script>
<% end %>


<main id="root"></main>