<% if logged_in? %>
  
  <% if current_user.photo.attached? %>
    <script type='text/javascript'>
      window.currentUser = {
              "id": <%= current_user.id %>,
              "username": "<%= current_user.username %>",
              "email": "<%= current_user.email %>",
              "photoUrl": "<%= url_for(current_user.photo) %>",
              "color": "<%= current_user.color %>",
      }
    </script>
  <% else %>
    <script type='text/javascript'>
      window.currentUser = {
              "id": <%= current_user.id %>,
              "username": "<%= current_user.username %>",
              "email": "<%= current_user.email %>",
              "color": "<%= current_user.color %>",
      }
    </script>
  <% end %>
  
  
<% end %>


<main id="root"></main>